{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": ["./node_modules/gts", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    // TODO: コードの再利用をする段階になったらこの行を消す
    "@typescript-eslint/no-unused-vars": "off",
    // TODO: 型のリファクタ段階になったら消したい
    "@typescript-eslint/no-explicit-any": "off"
  },
  "ignorePatterns": ["template/**/*"]
}
